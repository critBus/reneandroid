<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rene.android.reneandroid.Clases.Dialogos.DialogoAceptar">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="46dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/informacion2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TBDialogoAceptarAdveertencia"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/TVMensajeDialogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="Desde"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/TBDialogoAceptarAdveertencia"
            app:layout_constraintLeft_toRightOf="@+id/imageView2" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/TBDialogoAceptarAdveertencia"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/AppTheme"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Informacion"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
